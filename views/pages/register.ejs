<%- include('../partials/head'); %>
<body>
<section class="section-register">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
          background:#0093d0;
          height: 300px;
          "></div>
    <!-- Background image -->
  
    <div class="card mx-4 mx-md-5 shadow-5-strong" style="
          margin-top: -100px;
          background: hsla(0, 0%, 100%, 0.8);
          backdrop-filter: blur(30px);
          ">
      <div class="card-body py-5 px-md-5">
  
        <div class="row d-flex justify-content-center">
          <div class="col-lg-4">
            <h2 class="fw-bold mb-4">Register Now</h2>
            <form action="/register" method="post">

               <!-- First Name input -->
               <div class="form-outline mb-3">
                <input type="text" name="firstname" placeholder="Enter your first name" id="firstname" class="form-control" required/>
                <label class="form-label">First Name</label>
              </div>

               <!-- Last Name input -->
               <div class="form-outline mb-3">
                <input type="text" name="lastname" placeholder="Enter your last name" id="lastname" class="form-control" required/>
                <label class="form-label">Last Name</label>
              </div>

                <!-- Email input -->
                <div class="form-outline mb-3">
                  <input type="email" name="email" placeholder="Enter your email address" id="email" class="form-control" required/>
                  <label class="form-label">Email Address</label>
                </div>

                <!-- Phone input -->
              <div class="form-outline mb-3">
                <input type="tel" name="phone" placeholder="Enter phone number" id="phone" class="form-control" required />
                <label class="form-label">Phone Number</label>
              </div>


              <!-- Username input -->
              <div class="form-outline mb-3">
                <input type="text" name="username" placeholder="Create Username" id="username" class="form-control" required />
                <label class="form-label">Username</label>
              </div>
  
              <!-- Password input -->
              <div class="form-outline mb-3">
                <input type="password" name="password" placeholder="Create Password" id="password"class="form-control" required/>
                <label class="form-label">Password</label>
              </div>

              <input type="submit" value="Register" class="btn btn-primary btn-block text-light text-uppercase py-2 mb-3">
              <a href="/login" class="text-danger">Sign In</a>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>
</html>