<%- include('../partials/head'); %>
<body class="container-fluid">
    <%- include('../partials/header'); %>
    <section>
        <div class="page-header">
            <h1 class="text-dark">Departments</h1>
        </div>
    </section>

    <!-- Click on Modal Button -->
    <section class="section-department my-3">
        <button type="button" class="btn btn-sample mx-auto text-light btn-design my-3" data-bs-toggle="modal" data-bs-target="#addDepartmentModal">
            Add Department
        </button>

        <!-- Add Department Modal -->
        <div class="modal fade" id="addDepartmentModal" tabindex="-1" aria-labelledby="addDepartmentModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header text-light">
                        <h3 class="modal-title" id="addDepartmentModalLabel">New Department</h3>
                        <button type="button" class="btn-close text-light" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="addDepartmentForm" method="post" action="/add_departments">
                            <div class="row">
                                <label class="form-label fw-bold">Add Department</label>
                                <div class="d-flex">
                                    <div class="mb-3 col-md-8 col-sm-12">
                                        <input type="text" class="form-control" id="department_name" name="department_name" placeholder="Department name" required/>
                                    </div>
                                    <div class="col-md-3 col-sm-5 d-flex mx-3">
                                        <button type="submit" class="btn btn-sample btn-block text-light text-uppercase mb-3">Add</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- TABLE FOR DEPARTMENTS LIST -->
    <section class="section-table my-4">
        <table id="example" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>S No.</th>
                    <th>Department Name</th>
                    <th>Delete</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                <% if (departmentData && departmentData.length !== 0) { %>
                    <% departmentData.forEach(function(data, index) { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= data.department_name %></td>
                            <td>
                                <form id="deleteForm<%= index %>" action="/delete_department" method="post" onsubmit="return confirm('Are you sure you want to delete?')">
                                    <input type="hidden" name="department_id" value="<%= data.id %>">
                                    <button type="submit" class="btn btn-danger" aria-label="Delete">Delete</button>
                                </form>
                            </td>
                            <td>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#updateModal<%= data.id %>">
                                    Update
                                </button>
                            </td>
                        </tr>

                        <!-- Bootstrap Modal for Update -->
                        <div class="modal fade" id="updateModal<%= data.id %>" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header text-light">
                                        <h3 class="modal-title" id="updateModalLabel">Update Department</h3>
                                        <button type="button" class="btn-close text-light" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form method="post" action="/update_department/<%= data.id %>">
                                            <div class="row">
                                                <label class="form-label fw-bold">Update Department</label>
                                                <div class="d-flex">
                                                    <div class="mb-3 col-md-8 col-sm-12">
                                                        <input type="text" class="form-control" id="updated_department_name" name="updated_department_name" value="<%= data.department_name %>" required/>
                                                    </div>
                                                    <div class="col-md-3 col-sm-5 d-flex mx-3">
                                                        <button type="submit" class="btn btn-sample btn-block text-light text-uppercase mb-3">Update</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="4">No Data Found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </section>

    <%- include('../partials/footer'); %>

    <!-- Bootstrap JavaScript and jQuery Scripts (Make sure you have them included) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
</body>
</html>
